<div class="container-fluid text-center">
    <form role='form' class="form-horizontal">

      <div class="text-center">
        <h1>Log In {{title}}</h1>

        <div class="form-group">
          <label for="username" class="control-label col-sm-4">Username:</label>
            <div  class="col-sm-4">
                <input type="text" name="username" id="username" class="form-control"  ng-model="loginParams.username" placeholder="username" required="true"/>
            </div>   
        </div>
        <div class="form-group">
          <label for="password" class="control-label col-sm-4">Password:</label>
        <div  class="col-sm-4">      
            <input type="password" name="password" id="password" class="form-control"  ng-model="loginParams.password" placeholder="password" required="true"/>
        </div>
          </div>
          
        <div class="buttonDiv">
          <p>
            <input type="submit" name="signin" id="signin" class="btn btn-primary" value="Login" ng-click="authenticateUser(loginParams)"/> 
            <a href="/register" title="Register" class="button">New User?Click to Register here</a>
          </p>
          <span class="error-message" >{{errorLoginMessage}}</span> 
        </div>
      </div>

    </form>
</div>