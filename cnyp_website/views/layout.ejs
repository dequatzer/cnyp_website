<body id="home" data-spy="scroll" data-target="#myNavbar" data-offset="60">
  <nav class="navbar navbar-default navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span> 

          </button>
          <a class="navbar-brand class1" ui-sref="#home">Chotanagpur Youth Pune</a>
         
        </div>
        <div class="collapse navbar-collapse" id="myNavbar">
          <ul class="nav navbar-nav navbar-right">
            <li><a class="class1"  ui-sref="#about"><span class="glyphicon glyphicon-blackboard" aria-hidden="true"></span>ABOUT</a></li>
            <li><a class="class1"  ui-sref="#events"><span class="glyphicon glyphicon-calendar" aria-hidden="true"></span>EVENTS</a></li>
            <li><a class="class1"  ui-sref="#gallery"><span class="glyphicon glyphicon-picture" aria-hidden="true"></span>GALLERY</a></li>
            <li><a class="class1"  ui-sref="#contact"><span class="glyphicon glyphicon-phone-alt" aria-hidden="true"></span>CONTACT</a></li>
          
          
              <li ng-hide="globals.currentUser.loginStatus">    
                <a class="class2" data-toggle="modal" data-target="#loginModal"><span class="glyphicon glyphicon-check" aria-hidden="true"></span>LOGIN</a>
              </li>
              
              
              <li ng-hide="globals.currentUser.loginStatus">    
                <a class="class2" data-toggle="modal" data-target="#rgstrModal"><span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span>REGISTER</a>
              </li>

              <li ng-show="globals.currentUser.loginStatus">
                 <a class="class2" ui-sref="profile"><span class="glyphicon glyphicon-user" aria-hidden="true"></span>PROFILE</a>  
              </li>  

              <li ng-show="globals.currentUser.loginStatus">
                <a class="class2" ui-sref="#home">LOGOUT<span class="glyphicon glyphicon-log-in"></span></a>
              </li>
           
           
          </ul>
        </div>
      </div>
    </nav>

    <div class="jumbotron text-center">
      <img id="mainLogo" src="../../img/logo_old.jpg">
      <h1>Chotanagpur Youth Pune</h1>
      <p>...a helping hand</p>
    </div>

    <div ui-view></div>
    <!---START LOGIN MODAL --->
    <div class="modal fade" id="loginModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h3 class="modal-title" id="myModalLabel">Login</h3>
          </div>
          <div class="modal-body">
             <form role='form' class="form-horizontal" ng-controller="loginController">

                  <div class="text-center">

                    <div class="form-group">
                      <label for="username" class="control-label col-sm-4">Username:</label>
                        <div  class="col-sm-4">
                            <input type="text" name="username" id="username" class="form-control"  ng-model="loginParams.username" placeholder="username" required="true"/>
                        </div>   
                    </div>
                    <div class="form-group">
                      <label for="password" class="control-label col-sm-4">Password:</label>
                    <div  class="col-sm-4">      
                        <input type="password" name="password" id="password" class="form-control"  ng-model="loginParams.password" placeholder="password" required="true"/>
                    </div>
                      </div>

                    <div class="buttonDiv">
                      <p>
                        <input type="submit" name="signin" id="signin" class="btn btn-primary" value="Signin" ng-click="authenticateUser(loginParams)"/> 
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                       
                      </p>
                      <span class="error-message" >{{errorLoginMessage}}</span> 
                    </div>
                  </div>

            </form>
          </div>
          <div class="modal-footer">
            <a href="#" >Forgot Password?</a>
          </div>
        </div>
      </div>
    </div>
    
    <!---END LOGIN MODAL --->
    
    <!---START REGISTER MODAL --->
    <div class="modal fade" id="rgstrModal" tabindex="-1" role="dialog" aria-labelledby="regModalLabel">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h3 class="modal-title" id="regModalLabel">Register</h3>
          </div>
          <div class="modal-body">
                <form name="registerForm" ng-controller="registerController" novalidate ng-submit="registerUser()" role='form' class="form-horizontal">

                      <div class="text-center">
                        
                        <div class="form-group">
                          <label for="username" class="control-label col-sm-4">Username:</label>
                          <div  class="col-sm-4">
                          <input type="text" name="username" id="username" class="form-control" ng-model="userInformation.username" placeholder="username" ng-required="true" ng-minlength="2"/>
                          </div>
                          <span class="error-message" ng-show="registerForm.username.$dirty && registerForm.username.$error.required">Username is Mandatory</span>
                          <span class="error-message" ng-show="registerForm.username.$dirty && registerForm.username.$error.minlength">Username should be minimum 2 characters</span>
                        </div>
                        <div class="form-group">
                          <label for="password" class="control-label col-sm-4">Password:</label>
                          <div  class="col-sm-4">
                            <input type="password" name="password" id="password" class="form-control" ng-model="userInformation.password" placeholder="password" required="true"/>
                          </div>	

                        </div>
                        <div class="form-group">
                          <label for="re_password" class="control-label col-sm-4">Re-enter Password:</label>
                           <div  class="col-sm-4">
                            <input type="password" name="re_password" id="re_password" class="form-control" ng-model="userInformation.re_password" placeholder="password" required="true"/>
                            </div>       
                        </div>
                        <div class="form-group">
                          <label for="firstName" class="control-label col-sm-4">First Name:</label>
                           <div  class="col-sm-4">
                            <input type="text" name="firstName" id="firstName" class="form-control" ng-model="userInformation.firstName" placeholder="firstName" required="true"/>
                            </div>   
                        </div>
                        <div class="form-group">
                          <label for="lastName" class="control-label col-sm-4">Last Name:</label>
                          <div  class="col-sm-4">
                            <input type="text" name="lastName" id="lastName" class="form-control" ng-model="userInformation.lastName" placeholder="lastName" required="true"/>
                         </div>
                          </div>    
                        <div class="form-group">
                          <label for="emailID" class="control-label col-sm-4">Email ID:</label>
                          <div  class="col-sm-4">
                            <input type="text" name="emailID" id="emailID" class="form-control" ng-model="userInformation.emailID" placeholder="emailID" required="true"/>
                            </div>      
                        </div>
                        <div class="buttonDiv">
                          <p>
                           <!-- <button type="button" class="btn btn-primary" ng-click="createProfiles(userInformation)">
                            Register
                            </button>-->
                            <input type="submit" name="signup" id="signup" class="btn btn-primary" value="Signup" ng-click="createProfiles(userInformation)"/> 
                             <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                          </p>
                            {{errorLoginMessage}} 
                            <p> {{message}} </p>
                        </div>
                      </div>

                    </form>
          </div>
          <div class="modal-footer">
              
            <a title="Login" data-toggle="modal" data-target="#loginModal" class="button" data-dismiss="modal">Already a member?Click to Login here</a>
          </div>
        </div>
      </div>
    </div>
    <!---END REGISTER MODAL --->
    
    <footer class="container-fluid text-center">
      <p>ChotaNagpur Youth Pune (2015)</p>
    </footer>
  </body>
</html>